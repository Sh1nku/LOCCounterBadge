[Unit]
Description=Start Lines of Code web-server
After=mysqld.service
StartLimitIntervalSec=0
[Service]
Type=simple
Restart=always
RestartSec=30
User=USER_HERE
WorkingDirectory=WORKING_DIR_HERE
ExecStart=/usr/bin/python3 LOCCounterBadge.py
ProtectSystem=full
ProtectHome=true

[Install]
WantedBy=multi-user.target